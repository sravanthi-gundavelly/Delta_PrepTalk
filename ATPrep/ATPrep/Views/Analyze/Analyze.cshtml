        $scope.ready = function () {
            $scope.datalist = [];
            var data = new FormData();
            data.append("userid", localStorage.getItem("UserID"));
            data.append("role", localStorage.getItem("Role"));
            data.append("category", "DeltaFaucet");
            $.ajax({
                url: Url + "get_users_evaluations_score",
