        $scope.playFullAudio = function (filename, index, parentindex) {
            if (prevId != -1) {
                $("#" + parentprevId + "_" + prevId).css("display", "none");
                $('#simulateaudio_' + parentprevId + "_" + prevId).get(0).pause();
                $('#simulateSource_' + parentprevId + "_" + prevId).attr('src', "");

