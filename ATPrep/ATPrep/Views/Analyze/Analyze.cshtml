        $scope.toggleteam = function () {
            if ($("#panel").css("display") == "none") {
                $("#panel").css("display", "block");
                $("#showplus").css("display", "none");
                $("#showminus").css("display", "block");
            }
            else {
                $("#panel").css("display", "none");
