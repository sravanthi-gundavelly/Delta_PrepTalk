                                    }

                                    if (totalAvgEScore >= 8) {
                                        cssEClass = "green";
                                    }
                                    else if (totalAvgEScore >= 5) {
                                        cssEClass = "orange";
                                    }
                                    else {
                                        cssEClass = "red";
                                    }


                                    if (parseFloat(totalAvgTScore) + parseFloat(totalAvgEScore) >= 16)
                                        cssTEClass = "green"
                                    else if (parseFloat(totalAvgTScore) + parseFloat(totalAvgEScore) >= 10)
